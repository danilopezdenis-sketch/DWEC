<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Biblioteca</title>
</head>
<body>
  <h1>Catálogo de libros</h1>

  <table border="1">
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Estado</th>
    </tr>

    <% libros.forEach(libro => { %>
      <tr>
        <td>
          <a href="/libro/<%= libro.id %>">
            <%= libro.titulo %>
          </a>
        </td>
        <td><%= libro.autor %></td>
        <td><%= libro.estado %></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
